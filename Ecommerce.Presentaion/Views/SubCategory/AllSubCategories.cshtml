@model IEnumerable<Ecommerce.DTOs.DTOsCategories.GetAllSubCategoryDTOs>

@{
    ViewData["Title"] = "SubCategories";
}

<h1>SubCategories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Name_en)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_ar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategryName_en)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategryName_ar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           @*  <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Name_en)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_ar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategryName_en)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategryName_ar)
            </td>
            <td>
                    <a class="btn btn-primary btn-s" asp-action="UpdatedSubcategory" asp-route-id="@(item.Id)"> Updated</a>
                    &nbsp;&nbsp;
                    <a id="deletebtn" @* asp-route-id="@(item.Id)" *@ class="btn btn-danger btn-s" onclick="alertdelet(@(item.Id))">
                        <span class="glyphicon glyphicon-remove-circle"></span> X
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    var delbtn = document.getElementById("deletebtn");
    function alertdelet(id) {
        var check=confirm("Are you sure you want to delete this item?");
        if (check) {
            delbtn.setAttribute("href", `/SubCategory/DeleteSubCategory/${id}`)
        } else {
            delbtn.setAttribute("href", `/SubCategory/AllSubCategories`)
        }
    }
</script>