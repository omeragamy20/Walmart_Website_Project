@model Ecommerce.DTOs.DTOsCategories.CreateorUpdatedSubCategoryDTOs
@{
    ViewData["Title"] = "UpdatedSubcategory";
    SelectList catogories = new SelectList(ViewBag.Categories, "Id", "Name_en");

}

<h1>Updated SubCategory</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatedSubcategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name_en" class="control-label"></label>
                <input asp-for="Name_en" class="form-control" />
                <span asp-validation-for="Name_en" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name_ar" class="control-label"></label>
                <input asp-for="Name_ar" class="form-control" />
                <span asp-validation-for="Name_ar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Images</label>
                <input asp-for="ImageData" type="file" multiple accept="image/*" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="catogories"></select>
                <span asp-validation-for="CategoryId" style="color:red"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="AllSubCategories" class="btn btn-warning">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
