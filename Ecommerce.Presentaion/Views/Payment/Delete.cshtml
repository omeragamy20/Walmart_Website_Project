@model Ecommerce.DTOs.Payment.Read_DTO

<h1>Delete Payment</h1>

<div>
    <h4>Are you sure you want to delete this payment?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate</dd>

        <dt class="col-sm-2">Payment Method (EN)</dt>
        <dd class="col-sm-10">@Model.PaymentMethod_en</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
