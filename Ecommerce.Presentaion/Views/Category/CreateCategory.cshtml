@using Ecommerce.DTOs.DTOsCategories
@model CreateorUpdatedCategoryDTOs
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name_ar" class="form-label">الاسم</label>
        <input type="text" asp-for="Name_ar" class="form-control" >
        <span asp-validation-for="Name_en" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name_en" class="form-label">Name</label>
        <input type="text" asp-for="Name_en" class="form-control">
        <span asp-validation-for="Name_ar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Upload Images</label>
        <input asp-for="ImageData" type="file" multiple accept="image/*" class="form-control" />
        <span asp-validation-for="ImageData" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
<br />
<div>
    <a asp-action="AllCategories" class="btn btn-warning">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}