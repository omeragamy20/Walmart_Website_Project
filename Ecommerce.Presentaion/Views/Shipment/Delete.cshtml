@model Ecommerce.DTOs.Shipment.GetAllDto

<h1>Delete Shipment</h1>

<div>
    <h4>Are you sure you want to delete this shipment?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Shipment Date</dt>
        <dd class="col-sm-10">@Model.ShipmentDate</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Zip Code</dt>
        <dd class="col-sm-10">@Model.ZipCode</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

