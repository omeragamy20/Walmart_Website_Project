@using Ecommerce.DTOs.Facility
@model PrdFacilitySubCategory
@{
    ViewData["Title"] = "UpdateProductFacilty";
}

<h1>Update Product Facilty</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProductFacilty">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group" style="display:none">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            @if (Model.Values_En.Count > 0)
            {
            @for(int i = 0 ; i < Model.FacilityDTO.Count; i++)
            {


                <div style="display:flex">
                    <div>
                        <label>@Model.FacilityDTO[i].Name_en</label>
                        <div class="form-group">
                            <input asp-for="@Model.Values_En[i]" class="form-control" />
                        </div>
                    </div>
                    &nbsp;&nbsp;
                    <div>
                        <label>@Model.FacilityDTO[i].Name_ar</label>
                        <div class="form-group">
                            <input asp-for="@Model.Values_Ar[i]" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group" style="display:none">
                    <label asp-for="@Model.FacilityIds" class="control-label"></label>
                    <input asp-for="@Model.FacilityIds" value="@Model.FacilityDTO[i].Id" class="form-control" style="display:none" />
                </div>
            }                
            }
            else
            {
                @foreach (var m in Model.FacilityDTO)
                {

                    <div style="display:flex">
                        <div>
                            <label>@m.Name_en</label>
                            <div class="form-group">
                                <input asp-for="@Model.Values_En" class="form-control" value="" />
                            </div>
                        </div>
                        &nbsp;&nbsp;
                        <div>
                            <label>@m.Name_ar</label>
                            <div class="form-group">
                                <input asp-for="@Model.Values_Ar" class="form-control" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="@Model.FacilityIds" class="control-label">Specifications</label>
                        <input asp-for="@Model.FacilityIds" value="@m.Id" class="form-control" style="display:none" />
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

