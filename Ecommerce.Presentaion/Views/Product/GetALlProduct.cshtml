@model List<GetAllproductDTO>
<a class="btn btn-outline-primary" asp-action="Create">Create One</a>
<br />
</br>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Title_en</th>
            <th scope="col">Title_ar</th>
            <th scope="col">Description_en</th>
            <th scope="col">Description_ar</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Image</th>
            <th scope="col">SubCategory</th>
            <th scope="col">SubCategory_Ar</th>
            <th scope="col">Facilities</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model){
        <tr>
            <td>@p.Title_en</td>
            <td>@p.Title_ar</td>
            <td>@p.Description_en</td>
            <td>@p.Description_ar</td>
            <td>@p.Price</td>
            <td>@p.Stock</td>
                <td>@foreach (var img in @p.ImageUrls)
                    {
                        <img src="@img
                        " width="50px" height="50px"/>
                    }
                </td>
                <td>@foreach(var s in @p.SubCategoryNames)@s</td>
                <td>@foreach(var s in @p.SubCategoryNamesAr)@s</td>
                <td>@foreach (var f in @p.Facilities)@foreach(var ff in @f)@ff</td>
           <td>
                <a class="btn btn-outline-primary" asp-route-id="@p.Id" asp-action="Update">Update</a>
                <a class="btn btn-outline-primary" asp-route-id="@p.Id" asp-action="Delete">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
