@model List<FacilityDTO>


<a class="btn btn-outline-primary" asp-action="Create">Create One</a>
<br />
</br>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Name_en</th>
            <th scope="col">Name_ar</th>  
            <th scope="col">SubCategory</th> 
            <th scope="col">SubCategory_Ar</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <th scope="row">@p.Name_en</th>
                <td scope="row">@p.Name_ar</td>
                <td scope="row">@foreach (var s in @p.SubCategoryNames){@s <br/>}</td> 
                <td scope="row">@foreach (var s in @p.SubCategoryNamesAr){@s <br/>}</td>
                <td scope="row">
                    <div style="display:flex">
                        <a class="btn btn-outline-primary" asp-route-id="@p.Id" asp-action="Update">Update</a>
                        &nbsp;&nbsp;
                        <form asp-action="Delete" asp-controller="Facility" asp-route-id="@p.Id" method="post" onsubmit="return confirmDelete();">
                            <button type="submit" class="btn btn-danger">X</button>
                        </form>
                  </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>
